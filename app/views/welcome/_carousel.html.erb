<!-- Carousel area -->
<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
    <!-- Overlay -->
    <div class="overlay"></div>


    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item slides active">
            <div class="slide-1"></div>
            <div class="hero">
                <div class="hgroup">
                    <h1 class="carousel-header">NATIONAL ENERGY SURVEY SPECIALISTS</h1>
                </div>
                <%= link_to("PRODUCTS", products_path, class:'btn btn-hero btn-hero-green') %>
                <%= link_to("CONTACT", new_contact_path, class:'btn btn-hero btn-hero-trans') %>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-2"></div>
            <div class="hero">
                <div class="hgroup">
                    <h1 class="carousel-header">LOCAL EXPERTISE NATIONWIDE</h1>
                </div>
                <%= link_to("LEARN MORE", about_path, class:'btn btn-hero btn-hero-green') %>
            </div>
        </div>
        <div class="item slides">
            <div class="slide-3"></div>
            <div class="hero">
                <div class="hgroup">
                    <h1 class="carousel-header">LATEST ENERGY INDUSTRY NEWS</h1>
                </div>
                <%= link_to("LATEST NEWS", news_index_path, class:'btn btn-hero btn-hero-green') %>

            </div>
        </div>

    </div>

    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#bs-carousel" data-slide-to="1"></li>
        <li data-target="#bs-carousel" data-slide-to="2"></li>
    </ol>

</div>
